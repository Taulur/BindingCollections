<Window  x:Class="BindingCollections.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingCollections"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">

    <StackPanel>
        <Menu>
            <MenuItem Header="Настройки">
                <MenuItem Header="Сменить тему" Click="MenuItem_Click" >
                </MenuItem>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel Orientation="Horizontal">
            <Label  Style="{StaticResource MenuLabel}" Content="Количество пользователей:"/>
            <Label Style="{StaticResource MenuLabel}" Content="{Binding CountDoctor,  UpdateSourceTrigger=PropertyChanged}"/>
            <Label Style="{StaticResource MenuLabel}" Content="Количество пациентов:"/>
            <Label Style="{StaticResource MenuLabel}" Content="{Binding CountPatient,  UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
    </StackPanel>
</Window>
