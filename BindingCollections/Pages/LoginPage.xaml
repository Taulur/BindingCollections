<Page x:Class="BindingCollections.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="LoginPage">

    <StackPanel Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" Content="Вход пользователя"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="id пользователя: "/>
            <Label Grid.Row="1" Grid.Column="0" Content="Пароль: "/>
            <TextBox Name="idLogin" Width="120" Grid.Row="0" Grid.Column="1" Height="20"/>
            <TextBox Name="passwordLogin" Width="120" Grid.Row="1" Grid.Column="1" Height="20"/>

        </Grid>
        <Button Click="Login"  Margin="5" Width="100" Content="Войти"/>
        <Button Click="Register"  Margin="5" Width="100" Content="Регистрация"/>
    </StackPanel>
</Page>
