<Page x:Class="BindingCollections.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      xmlns:converters="clr-namespace:BindingCollections.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <converters:NumberConverter x:Key="numberConverter"/>
    </Page.Resources>
    <StackPanel Style="{DynamicResource StackBack}" Grid.Row="2" Grid.Column="0">
        <Label Style="{DynamicResource MenuLabel}" Content="Текущий пользователь"/>

        <Grid Style="{DynamicResource GridBack}">
           
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label  Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label  Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label  Content="Специализация: " Grid.Row="3" Grid.Column="0"/>
            <Label  Content="Пароль: " Grid.Row="4" Grid.Column="0"/>
            <Label Content="{Binding Doctor.Name,  UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1"/>
            <Label  Content="{Binding Doctor.MiddleName,  UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>
            <Label  Content="{Binding Doctor.LastName,  UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1"/>
            <Label  Content="{Binding Doctor.Specialisation,  UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1"/>
            <Label  Content="{Binding Doctor.Password, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1"/>
        </Grid>
        <StackPanel>
            <Button  Content="Создать пациента" Style="{DynamicResource AddButton}" Click="Create" />
            <Button Click="Appointment"   Content="Начать приём"/>
            <Button Style="{DynamicResource ChangeButton}" Click="Change" Content="Изменить информацию"/>
        </StackPanel>
        <ListView ItemsSource="{Binding PatientList}" SelectedItem="{Binding selectedPatient}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding LastName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: "/>
                            <TextBlock Text="{Binding MiddleName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата рождения: "/>
                            <TextBlock Text="{Binding Birthday}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Номер телефона: "/>
                            <TextBlock Text="{Binding Number, Converter={StaticResource numberConverter}}"/>
                        </StackPanel>
                        
                       
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
