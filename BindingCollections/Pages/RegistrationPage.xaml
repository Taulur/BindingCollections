<Page x:Class="BindingCollections.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <StackPanel Height="450" Width="800" Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label HorizontalAlignment="Center" Height="25" Content="Регистрация пользователя"/>
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Height="25" Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Height="25" Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label Height="25" Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label Height="25" Content="Специализация: " Grid.Row="3" Grid.Column="0"/>
            <Label Height="25" Content="Пароль: " Grid.Row="4" Grid.Column="0"/>
            <Label Height="25" Content="Повторение пароля: " Grid.Row="5" Grid.Column="0"/>
            <TextBox Text="{Binding Name}"  Width="120" Height="20" Grid.Row="0" Grid.Column="1" />
            <TextBox Text="{Binding LastName}"   Width="120" Height="20"  Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="{Binding MiddleName}"  Width="120" Height="20"  Grid.Row="2" Grid.Column="1"/>
            <TextBox Text="{Binding Specialisation}"  Width="120" Height="20"  Grid.Row="3" Grid.Column="1"/>
            <TextBox Text="{Binding Password}"  Width="120" Height="20"  Grid.Row="4" Grid.Column="1"/>
            <TextBox Name="Confirmation" Width="120" Height="20"  Grid.Row="5" Grid.Column="1"/>
        </Grid>
        <Button Click="Registration"  Margin="5" Width="150" Content="Зарегистрироваться"/>
        <Button Click="Return"  Margin="5" Width="150" Content="Вернуться"/>
    </StackPanel>
</Page>
