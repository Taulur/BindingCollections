<Page x:Class="BindingCollections.Pages.ChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePage">

    <StackPanel Background="NavajoWhite" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label HorizontalAlignment="Center" Height="25" Content="Изменить пациента"/>
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Height="25" Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Height="25" Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label Height="25" Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label Height="25" Content="Дата рождения: " Grid.Row="3" Grid.Column="0"/>
            <TextBox Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="120" Height="20"  Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="{Binding LastName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="120" Height="20"  Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="{Binding MiddleName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="120" Height="20"  Grid.Row="2" Grid.Column="1"/>
            <TextBox Text="{Binding Birthday,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="120" Height="20"  Grid.Row="3" Grid.Column="1"/>
        </Grid>
        <Button Click="Change"  Margin="5" Width="150" Content="Изменить"/>
        <Button Click="Return"  Margin="5" Width="150" Content="Вернуться"/>
    </StackPanel>
</Page>
