 <Page x:Class="BindingCollections.Pages.CreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePage">

    <StackPanel Style="{DynamicResource StackBack}" >
        <Label Style="{StaticResource MenuLabel}" Content="Регистрация пациента"/>
        <Grid Style="{DynamicResource GridBack}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label  Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label  Content="Дата рождения: " Grid.Row="3" Grid.Column="0"/>
            <TextBox Text="{Binding Name}"   Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="{Binding LastName}"   Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="{Binding MiddleName}"    Grid.Row="2" Grid.Column="1"/>
            <DatePicker Text="{Binding Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   Grid.Row="3" Grid.Column="1"/>

        </Grid>
        <Button Content="Зарегистрировать пациента" Style="{StaticResource AddButton}" Click="Register" />
        <Button Style="{DynamicResource BackButton}" Click="Return"  Content="Вернуться"/>
    </StackPanel>
</Page>
