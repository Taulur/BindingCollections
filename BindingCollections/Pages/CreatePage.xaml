<Page x:Class="BindingCollections.Pages.CreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
       xmlns:validators="clr-namespace:BindingCollections.ValidationRules"
       xmlns:converters="clr-namespace:BindingCollections.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePage">
    <StackPanel Style="{DynamicResource StackBack}" >
        <Label Style="{StaticResource MenuLabel}" Content="Регистрация пациента"/>
        <Grid Style="{DynamicResource GridBack}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label  Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label  Content="Дата рождения: " Grid.Row="3" Grid.Column="0"/>
            <Label  Content="Номер телефона: " Grid.Row="4" Grid.Column="0"/>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBox x:Name="NameBox"  >
                    <TextBox.Text>
                        <Binding Path="Name">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" FontSize="12" ItemsSource="{Binding ElementName=NameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBox x:Name="LastNameBox"  >
                    <TextBox.Text>
                        <Binding Path="LastName">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" FontSize="12" ItemsSource="{Binding ElementName=LastNameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1">
                <TextBox x:Name="MiddleNameBox"  >
                    <TextBox.Text>
                        <Binding Path="MiddleName">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" FontSize="12" ItemsSource="{Binding ElementName=MiddleNameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBox x:Name="BirthdayBox"  >
                    <TextBox.Text>
                        <Binding Path="Birthday">
                            <Binding.ValidationRules>
                                <validators:DateValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" FontSize="12" ItemsSource="{Binding ElementName=BirthdayBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Grid.Row="4" Grid.Column="1">
                <TextBox x:Name="NumberBox"  >
                    <TextBox.Text>
                        <Binding Path="Number">
                            <Binding.ValidationRules>
                                <validators:NumberValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" FontSize="12" ItemsSource="{Binding ElementName=NumberBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
        <Button Content="Зарегистрировать пациента" Style="{StaticResource AddButton}" Click="Register" />
        <Button Style="{DynamicResource BackButton}" Click="Return"  Content="Вернуться"/>
    </StackPanel>
</Page>
