<Page x:Class="BindingCollections.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    <StackPanel Style="{DynamicResource StackBack}" >
        <Label Style="{StaticResource MenuLabel}" Content="Приём пациента"/>
        <Grid Style="{DynamicResource GridBack}"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Label  Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label  Content="Дата рождения: " Grid.Row="3" Grid.Column="0"/>

            <Label   Content="{Binding Patient.Name}" Grid.Row="0" Grid.Column="1"/>
            <Label  Content="{Binding Patient.LastName}"  Grid.Row="1" Grid.Column="1"/>
            <Label  Content="{Binding Patient.MiddleName}"  Grid.Row="2" Grid.Column="1"/>
            <Label  Content="{Binding Patient.Birthday}" Grid.Row="3" Grid.Column="1"/>
            
        </Grid>
        <ListView ItemsSource="{Binding Patient.LastAppointment}" LostFocus="ListView_LostFocus" SelectionChanged="ListView_SelectionChanged" SelectedItem="{Binding CopyAppointment}" MouseDoubleClick="ListView_MouseDoubleClick" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата приёма: "/>
                            <TextBlock Text="{Binding Date}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Id доктора: "/>
                            <TextBlock Text="{Binding DoctorId}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Диагноз: "/>
                            <TextBlock Text="{Binding Diagnosis}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Рекомендация: "/>
                            <TextBlock Text="{Binding Recomendations}"/>
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label  Content="Дата приёма: " Grid.Row="0" Grid.Column="0"/>
            <Label  Content="Диагноз: " Grid.Row="1" Grid.Column="0"/>
            <Label Style="{StaticResource MenuLabel}" Grid.ColumnSpan="2"  Height="25" Content="Рекомендация: " Grid.Row="2" Grid.Column="0"/>
            <DatePicker Text="{Binding CopyAppointment.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="{Binding CopyAppointment.Diagnosis, UpdateSourceTrigger=PropertyChanged}"  Grid.Row="1" Grid.Column="1"/>
            <TextBox Style="{StaticResource WideBox}" Text="{Binding CopyAppointment.Recomendations, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"  Grid.Row="7" Grid.Column="0"/>
        </Grid>
        <Button Content="Создать приём" Style="{StaticResource AddButton}" Click="Add"  />

        <Button Style="{DynamicResource BackButton}" Click="Return"  Content="Вернуться"/>
    </StackPanel>
</Page>
