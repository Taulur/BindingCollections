<Page x:Class="BindingCollections.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BindingCollections.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    <StackPanel Background="AntiqueWhite" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label HorizontalAlignment="Center" Height="25" Content="Приём пациента"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Label Height="25" Content="Имя: " Grid.Row="0" Grid.Column="0"/>
            <Label Height="25" Content="Фамилия: " Grid.Row="1" Grid.Column="0"/>
            <Label Height="25" Content="Отчество: " Grid.Row="2" Grid.Column="0"/>
            <Label Height="25" Content="Дата рождения: " Grid.Row="3" Grid.Column="0"/>

            <Label  Height="25" Content="{Binding Patient.Name}" Grid.Row="0" Grid.Column="1"/>
            <Label Height="25" Content="{Binding Patient.LastName}"  Grid.Row="1" Grid.Column="1"/>
            <Label Height="25" Content="{Binding Patient.MiddleName}"  Grid.Row="2" Grid.Column="1"/>
            <Label Height="25"  Content="{Binding Patient.Birthday}" Grid.Row="3" Grid.Column="1"/>
            
        </Grid>
        <ListView ItemsSource="{Binding Patient.LastAppointment}" SelectedItem="{Binding SelectedAppointment, UpdateSourceTrigger=PropertyChanged}"  Width="200" Height="125">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата приёма: "/>
                            <TextBlock Text="{Binding Date}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Id принимающего доктора: "/>
                            <TextBlock Text="{Binding Doctor.Id}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Диагноз: "/>
                            <TextBlock Text="{Binding Diagnosis}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Рекомендация: "/>
                            <TextBlock Text="{Binding Recomendations}"/>
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Height="25" Content="Дата приёма: " Grid.Row="0" Grid.Column="0"/>
            <Label Height="25" Content="Диагноз: " Grid.Row="1" Grid.Column="0"/>
            <Label Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="25" Content="Рекомендация: " Grid.Row="2" Grid.Column="0"/>
            <DatePicker Text="{Binding SelectedAppointment.Date, UpdateSourceTrigger=PropertyChanged}" Width="120" Height="25"  Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="{Binding SelectedAppointment.Diagnosis, UpdateSourceTrigger=PropertyChanged}"  Width="120" Height="20" Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="{Binding SelectedAppointment.Recomendations, UpdateSourceTrigger=PropertyChanged}"  Margin="10" Grid.ColumnSpan="3" Width="225" Height="45" Grid.Row="7" Grid.Column="0"/>
        </Grid>
        <Button Click="Change" Content="Изменить"/>
        <Button Click="Return" Content="Вернуться"/>
    </StackPanel>
</Page>
